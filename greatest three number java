import java.util.Arrays;

public class GreatestThreeNumbers {
    public static void main(String[] args) {
        int[] numbers = {10, 30, 20, 50, 40};

        if (numbers.length < 3) {
            System.out.println("Array should have at least three numbers.");
            return;
        }

        Arrays.sort(numbers); // Sort

        int greatest1 = numbers[numbers.length - 1]; 
        int greatest2 = numbers[numbers.length - 2]; 
        int greatest3 = numbers[numbers.length - 3];

        System.out.println("The three greatest numbers are: " + greatest1 + ", " + greatest2 + ", " + greatest3);
    }
}
